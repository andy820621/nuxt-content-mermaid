{
  "name": "@barzhsieh/nuxt-content-mermaid",
  "version": "1.0.1",
  "description": "A Nuxt module designed for integrating Mermaid with `@nuxt/content`. It automatically converts `mermaid` code blocks in Markdown into responsive chart components, and supports lazy loading and dark/light theme switching.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andy820621/nuxt-content-mermaid.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types.d.mts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "npm run dev:prepare && nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "npm run lint && npm run test && npm run prepack && changelogen --release && npm publish && git push --follow-tags",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit"
  },
  "dependencies": {
    "@nuxt/kit": "^4.2.1",
    "defu": "^6.1.4"
  },
  "peerDependencies": {
    "@nuxt/content": "^3.8.0"
  },
  "devDependencies": {
    "@nuxt/content": "3.8.0",
    "@nuxt/devtools": "^3.1.0",
    "@nuxt/eslint-config": "^1.10.0",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.2.1",
    "@nuxt/test-utils": "^3.20.1",
    "@nuxtjs/color-mode": "^4.0.0",
    "@types/node": "latest",
    "changelogen": "^0.6.2",
    "eslint": "^9.39.1",
    "mermaid": "^11.12.1",
    "nuxt": "^4.2.1",
    "typescript": "~5.9.3",
    "vitest": "^4.0.10",
    "vue-tsc": "^3.1.4"
  },
  "volta": {
    "node": "22.21.1"
  }
}
